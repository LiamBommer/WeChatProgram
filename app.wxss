/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

page {
  background-color: #f2f2f2;
}

/*
 * 用于页面内一块信息的view
 * 规定了以下：
 * - 内边距 - 左右各 40rpx
 * - 颜色 - 白
 */
.view-container {
  padding: 0rpx 40rpx;
  background-color: white;
}

/*
 * 使页面内元素垂直居中
 * 常用于列表项等地方
 */
.ver-align {
  display: flex;
  flex-direction: row;
  align-items: center;
}
