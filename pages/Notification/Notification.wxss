/* pages/Notification/Notification.wxss */
 .Announcement-container{
  width: 100%;
  display: flex;
  flex-direction: column;
  padding:0rpx 40rpx;
  background: #fff;
}

.item{
  width: 100%;
  height: 135rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #f2f2f2;
}

.item .item-first{
  width: 117%;
  display: flex;
  align-items: center;
}

.item .item-first .item-icon{
   width: 70rpx;
   height: 70rpx;
   border-radius: 10rpx;
}

.item .item-first .item-message{
  width:27rpx;
  height:27rpx;
  border-radius:50%;
  color:#fff;
  background:red;
  position:relative;
  font-size:20rpx;
  text-align:center;
  bottom:35rpx;
  right:10rpx;
}

.item .item-first .item-text{
   width:70%;
}

.item .item-first .item-text .item-read{
   font-size: 28rpx;
   color: #b2b2b2;
}

.item .item-first .item-text .item-content{
   font-size: 28rpx;
   /* 多行省略 */
   display: -webkit-box;
   line-height: 40rpx;
   word-break: break-all;
   -webkit-box-orient: vertical;
   -webkit-line-clamp: 1;
   overflow: hidden;
   text-overflow: ellipsis;
   /* 多行省略 */
}

  .item .item-second{
   font-size: 26rpx;
   color: #b2b2b2;
   display:flex;
   flex-direction:column;
   justify-content: flex-start;
   align-items:center;
   margin-top:16rpx;   
}

  .item .item-second .item-time{
   font-size: 25rpx;
   margin-top:-45rpx;
}


  .touch-item {
   font-size: 14px;
   display: flex;
   width: 100%;
   overflow: hidden
  }

  .contentminddle{
    width: 150%;
    margin-right:0;
    -webkit-transition: all 0.4s;
    transition: all 0.4s;
    -webkit-transform: translateX(90px);
    transform: translateX(90px);
    margin-left: -180rpx
  }

 .del {
  background-color: #e64340;
  width: 180rpx;
  height:135rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
 }
 .touch-move-active .content,
 .touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
 }

 .read {
  background-color: #b2b2b2;
  width: 240rpx;
  height:135rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(130px);
  transform: translateX(130px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
 }
 .touch-move-active .content,
 .touch-move-active .read {
  -webkit-transform: translateX(0);
  transform: translateX(0);
 }
