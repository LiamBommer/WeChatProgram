.input-text-view {
  display: flex;
  flex-direction: column;
  background-color: white;
}

.input-text-view .title-view {
  height: 120rpx;
  width: 100%;
  border: 2rpx solid #f2f2f2;
}

.input-text-view .content-view {
  height: 460rpx;
  width: 100%;
  padding-top: 10rpx;
}

.input-text-view .title-view .title {
  font-size: 36rpx;
  height: 100%;
  margin: 10rpx 40rpx;
}

.input-text-view .content-view .content {
  font-size: 34rpx;
  height: 100%;
  margin: 20rpx 40rpx;
}

.item-view {
  width: 100%;
  height: 100rpx;
  margin-top: 40rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

text.read-text {
  margin-left: 40rpx;

}

switch {
  margin-right: 40rpx;
}

button {
  margin-top: 80rpx;
  width: 600rpx;
}
