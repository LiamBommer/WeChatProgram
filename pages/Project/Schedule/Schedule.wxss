/* pages/Project/Schedule/Schedule.wxss */

.Schedule-container{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.Schedule-container .noitem{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top:260rpx;
}

.Schedule-container .noitem .noitem-icon{
  width:130rpx;
  height:130rpx;
}

.Schedule-container .noitem  .noitem-title{
  font-size: 40rpx;
  color: #888888;
  margin-top:20rpx;
}

.Schedule-container .noitem  .noitem-content{
  font-size: 30rpx;
  color: #b2b2b2;
  margin-top:10rpx;
}

.Schedule-container .noitem  .noitem-create{
  color: #fff;
  background: #09BB07;
  margin-top: 40rpx;
}

.Schedule-container .title{
    color: #888888;
    margin-left: 40rpx;
    margin-top: 30rpx;
    margin-bottom: 16rpx;
    font-size: 28rpx;
}

.Schedule-container .item{
    background: #fff;
    color: #000;
    width: 100%;
    min-height: 140rpx;
    display: flex;
    align-items: center;
    border-top: 1rpx solid #f2f2f2;
    /* justify-content: space-around; */
}

.Schedule-container .item.hasBorder {
  border-top: 16rpx solid #f2f2f2;
  border-bottom: 16rpx solid #f2f2f2;
}

.Schedule-container .item .item-first{
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: space-around;
    padding: 24rpx 0rpx;
    font-size: 34rpx;
    color: #888888;
    margin-left: 40rpx;
    width:140rpx;

}

.Schedule-container .item .item-first .item-time{
    /* font-weight: bold; */
}

.Schedule-container .item .item-first .item-connect{
  color: #b2b2b2;
}

.Schedule-container .item .item-second{
    font-size: 34rpx;
    margin-left: 30rpx;
    width: 430rpx;
    padding: 24rpx 0rpx;
    /* text-align: center; */

}

.Schedule-container .item .item-second .item-title{
    display: block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    padding: 24rpx 0rpx;
}

.Schedule-container .item .item-second .item-text{
    display: block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #888888;
    font-size: 28rpx;
    width: 100%;
}

.Schedule-container .item .item-third{
    width: 40rpx;
    height: 100%;
    padding: 0rpx 40rpx 0rpx 30rpx;
}

.Schedule-container .item .item-third image {
  width: 40rpx;
  height: 40rpx;

}

.Schedule-container .buildicon{
  position: fixed;
  left: 640rpx;
  top: 1000rpx;
  width: 80rpx;
  height: 80rpx;
}
