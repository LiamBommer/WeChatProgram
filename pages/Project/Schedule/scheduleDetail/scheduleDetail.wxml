<!-- scheduleDeatil.wxml -->
<view>
   <view class="view-container">
     <view class='title-view ver-align space-between'>
       <text class='title' bindtap="modalinputTitle">{{title}}</text>
        <modal hidden="{{hiddenmodalputTitle}}" title="日程标题" confirm-text="提交" cancel-text="取消" bindcancel="cancelTitle" bindconfirm="confirmTitle"> 
              <input id='title' bindinput='input' type='text' value='{{inputTitle}}' placeholder="请输入日程标题" />
        </modal> 

       <button class='share' hover-class="share-hover"  open-type="share">
          <image src='{{icon_share}}'></image>
       </button>
     </view>
  </view>
  <view class="view-container">
    <view class="item-view">
      <image src='{{icon_deadline}}'></image>
      <picker class='desc' mode="date" value="{{stattime}}" bindchange="StatTimeChange">
          <view>
            {{stattime}} 开始
          </view>
      </picker>
    </view>
    <view class="item-view">
      <image src='{{icon_deadline}}'></image>
      <picker class='desc' mode="date" value="{{deadline}}" bindchange="DeadLineChange">
          <view>
            {{deadline}} 截止
          </view>
      </picker>
    </view>
    <view class="item-view ver-align space-between">
      <view class='ver-align'>
        <image src='{{icon_task_list}}'></image>
        <text class='desc'>关联任务</text>
      </view>
      <image src='{{icon_add}}' bindtap='connectTask'></image>
    </view>
      <block wx:for="{{connectTask}}">
          <view class="item-view ver-align space-between">
            <text >{{item.name}}</text>
            <image src='{{item.icon}}'></image>
          </view>
      </block>
    <view class="item-view">
      <image src='{{icon_close}}'></image>
      <text class='desc delete-text' bindtap='Delete'>删除日程</text>
    </view>
  </view>
</view>
