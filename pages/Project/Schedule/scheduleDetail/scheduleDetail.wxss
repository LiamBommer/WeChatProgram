.view-container .title-view .title {
  font-size: 40rpx;
  width: 590rpx;
}

.view-container .title-view {
  border-bottom: 2rpx solid #f2f2f2;
  min-height: 120rpx;
  padding: 16rpx 0rpx;
}

.title-view .share{
  background-color: #fff;
  border: none;
  margin:0rpx;
  padding:0rpx 0rpx 0rpx 40rpx;
}

button[class="share"]::after {
  border: none;
}

.title-view .share-hover{
  border: none;
}

button[hover-class="share-hover"]::after {
  border: none;
}

.desc.delete-text {
  color: #e64340;
}

.title-view image {
  height: 40rpx;
  width: 40rpx;
}

.item-view .desc {
  width: 520rpx;
}

.item-view image {
  width: 40rpx;
  height: 40rpx;
}

.item-view .delete-img {
  padding-left: 40rpx;
}
