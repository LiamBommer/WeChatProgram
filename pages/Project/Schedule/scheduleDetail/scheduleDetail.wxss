.view-container .title-view .title {
  font-size: 40rpx;
}

.view-container .title-view {
  border-bottom: 2rpx solid #f2f2f2;
  height: 120rpx;
  padding: 16rpx 0rpx;
}

.title-view .share{
  background-color: #fff;
  border: none;
  margin:0rpx;
  padding:0rpx
}

button[class="share"]::after {
  border: none;
} 

.title-view .share-hover{
  border: none;
}

button[hover-class="share-hover"]::after {
  border: none;
} 

.desc.delete-text {
  color: #e64340;
}

.title-view image {
  height: 40rpx;
  width: 40rpx;
}
