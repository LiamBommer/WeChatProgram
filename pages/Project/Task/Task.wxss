/* pages/Task/Task.wxss */
.Task-container{
}

.swiper{
  height: 1050rpx;
  width: 100%;
}

.Task-container .task-container{
  box-shadow: 5rpx 5rpx 1rpx #888888;
  border-radius: 10rpx;
  height: 960rpx;
  width: 690rpx;
  margin-top: 30rpx;
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  background: #E8E8E8;
}

.Task-container .task-container .tasktitle{
   display: flex;
   align-items: center;
   justify-content: space-between;
   margin-top: 30rpx;
   margin-left: 20rpx;
}

.Task-container .task-container .tasktitle .title{
   font-size: 34rpx;
   color: #888888;
}

.Task-container .task-container .tasktitle .more{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.Task-container .task-container .taskitem{
  box-shadow: 2rpx 2rpx 1rpx #888888;
  border-radius: 10rpx;
  background: #fff;
  width: 650rpx;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-left: 20rpx;
}

.Task-container .task-container .taskitem .taskitem-top{
  display: flex;
  margin-left: 20rpx;
  margin-top: 20rpx;
}

.Task-container .task-container .taskitem .taskitem-bottom{
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
}

.Task-container .task-container .taskitem .taskitem-bottom .taskicon{
  margin-left: 40rpx;
}

.Task-container .task-container .taskitem .taskitem-bottom .taskicon .icon{
  width: 40rpx;
  height: 40rpx;
  margin-left: 15rpx;
}

.Task-container .task-container .taskitem .taskitem-bottom .tasktime-green{
   background: #09BB07;
   color: #fff;
   border-radius: 10rpx;
   margin-right: 10rpx;
   line-height: 45rpx;
   padding: 1.5rpx 6rpx;
}

.Task-container .task-container .taskitem .taskitem-bottom .tasktime-red{
   background: #E64340;
   color: #fff;
   border-radius: 10rpx;
   margin-right: 10rpx;
   line-height: 45rpx;
   padding: 1.5rpx 6rpx;
}

.Task-container .task-container .addTask{
  width: 650rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
  font-size: 34rpx;
  color: #888888;
  margin-left: 20rpx;
  margin-top: 30rpx;
  border: 0.5rpx dashed #b2b2b2;
}

.Task-container .task-container .addTask .addTask-icon{
  width: 100rpx;
  height: 100rpx;
  margin-left: 20rpx;
}

.Task-container .task-container .addTask .addTask-text{
  margin-left: 50rpx;
}
