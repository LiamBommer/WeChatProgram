<!--pages/editMemberList/editMemberList.wxml-->
<view class='memberList-container'>

  <block wx:for="{{ProjectMemember}}">
    <block wx:if="{{index == 0}}">
      <!-- 标题 -->
      <view class='title'>任务负责人</view>
      <!-- 列表项 -->
      <view class='item'>
        <view class='item-one'>
          <image class='item-icon' src='{{item.icon}}'></image>
          <view class='item-text'>{{item.name}}</view>
        </view>
      </view>
      <!-- 标题 -->
      <view class='title'>项目成员</view>
    </block>

    <block wx:else>
      <checkbox-group>
        <!-- 列表项 -->
        <view class='item'>
          <view class='item-one'>
            <image class='item-icon' src='{{item.icon}}'></image>
            <view class='item-text'>{{item.name}}</view>
          </view>
          <checkbox class='item-checkbox' value="{{item.id}}" checked='{{item.checked}}'/>
        </view>
      </checkbox-group>
    </block>
  </block>

  <button type='primary' size="default" bindtap='save'>完成</button>

</view>
