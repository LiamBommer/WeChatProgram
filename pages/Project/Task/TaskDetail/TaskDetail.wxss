/*
 * 聊天区
 */
.chat{
  display: flex;
  flex-direction: column;
  padding-bottom: 140rpx;
}

.chat .desc-title {
  color: #888888;
  margin-left: 40rpx;
  margin-top: 30rpx;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.chat .taskremind{
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #888888;
  margin-top: 40rpx;
}

.chat .person-icon-view {
  height: 100%;
}

.chat .chatperson{
  width: 670rpx;
  padding: 16rpx 40rpx;
  min-height: 110rpx;
  background-color: white;
  border-bottom: solid 2rpx #f2f2f2;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.chat .chatperson .person-icon-view{
  display:flex;
  justify-content:flex-start;
  flex-direction:column;
  margin-left:20rpx;
  width:90%;
  margin-top:30rpx;
}

.chat .chatperson  .person-icon{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  top: 9rpx;
}

.chat .chatperson .content{
  line-height:60rpx;
}

.chat .chatperson .time{
  font-size:24rpx;
  color:#888888;
  width:100%;
  text-align:end;
}

.chat .chatperson  .person-icon-view .content-img{
  width: 60rpx;
  height: 60rpx;
  margin-left: 20rpx;
  background: #fff;
  border-radius:10rpx;
  padding:15rpx;
  line-height: 50rpx;
}
