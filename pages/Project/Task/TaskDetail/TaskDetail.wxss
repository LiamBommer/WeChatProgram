/*
 * 输入区
 */
.chat .input{
  position: fixed;
  bottom: 0rpx;
  background: #fff;
  height: 100rpx;
  width: 100%;
  display: flex;
  align-items: center;
}

.chat .input .template-icon{
  width: 40rpx;
  height: 40rpx;
  margin-left:20rpx;
}

.chat .input input{
  margin-left:20rpx;
  height:49rpx;
  width:550rpx;
  background:#F2F2F2;
  border-radius:10rpx;
  padding:10rpx 16rpx;
}

.chat .input .face-icon{
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
}

.chat .input .picture-icon{
  width: 40rpx;
  height: 40rpx;
  margin-left:20rpx;
}

#send-btn {
  width: 70rpx;
  height: 72rpx;
  margin-left: 10rpx;
  padding: 0rpx;
  font-size: 28rpx;
  background-color: #09bb07;
  color: white;
  border: none;
}

  .touch-item {
   font-size: 14px;
   display: flex;
   justify-content: space-between;
   width: 100%;
   overflow: hidden
  }

  .contentminddle{
    width: 100%;
    padding: 10px;
    line-height: 22px;
    margin-right:0;
    -webkit-transition: all 0.4s;
    transition: all 0.4s;
    -webkit-transform: translateX(90px);
    transform: translateX(90px);
    margin-left: -90px
  }

 .del {
  background-color: #e64340;
  width: 90px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
 }
 .touch-move-active .content,
 .touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
 }
