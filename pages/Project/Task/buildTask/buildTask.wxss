    width:100%; 
    display: flex;
    flex-direction: column;
}

.buildTask-container .item{
    background: #fff;
    color: #000;
    width: 100%;
    height: 100rpx;
    display: flex;
    align-items: center;
}

.buildTask-container .item .item-title{
   margin-left: 40rpx;
}

