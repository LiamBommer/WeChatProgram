.nav{
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 30rpx;
  background: #fff;
  color: #888888;
}

.nav .nav-select{
  color: #09BB07;
}

.nav .nav-item {
  width: calc(750rpx / 5);
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around;
  border-bottom: 5rpx solid transparent;
}

.nav .nav-cover {
  width: calc(750rpx / 5);
  height: 90rpx;
  position: absolute;
  left: 0rpx;
  background-color: transparent;
  border-bottom: 5rpx solid #09bb07;
  z-index: 50;
  transition: left 0.4s ease;
}