/*** 新手指引 ***/
.guide-container {
  display: flex;
  position: fixed;
  z-index: 9999;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}
.guide-container .guide-mask {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.guide-container .guide-mask .guide-frame {
  width: 500rpx;
  min-height: 375rpx;
  border-radius: 20rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  margin-top: 300rpx;
}
.guide-container .guide-mask .guide-frame .frame-title {
  font-size:  40rpx;
  margin: 120rpx 0rpx 10rpx 0rpx;
  width: 450rpx;
  text-align: center;
}
.guide-container .guide-mask .guide-frame .frame-desc {
  font-size: 34rpx;
  color: #888888;
  width: 450rpx;
  text-align: center;
  line-height: 60rpx;
}
.guide-container .guide-mask .guide-frame .frame-btn {
  width: 450rpx;
  margin-bottom: 20rpx;
  margin-top: 40rpx;
}
.guide-container .guide-mask .guide-focus {
  position: fixed;
  z-index: 10000;
  top: 370rpx;
  left: 630rpx;
  border-radius: 50%;
  background-color: white;
  width: 100rpx;
  height: 100rpx;
}
.guide-container .guide-mask .guide-focus image {
  width: 40rpx;
  height: 40rpx;
  margin-left: 30rpx;
  margin-top: 30rpx;
}
