<!--pages/memberList/memberList.wxml-->
<view class='memberList-container'>

    <checkbox-group bindchange="ProjectMememberChange">
      <block wx:for="{{ProjectMemember}}">
          <block wx:if="{{index == 0}}">
            <!-- 标题 -->
            <view class='title'>项目负责人</view>
            <!-- 列表项 -->
            <view class='item'>
                  <view class='item-one'>
                    <image class='item-icon' src='{{item.icon}}'></image>
                    <view class='item-text'>{{item.name}}</view>
                  </view>
                  <!-- <checkbox class='item-checkbox' value="{{item.id}}" checked='{{item.checked}}' 
                  style='display:{{isLeader? "":"none"}}'/> -->
            </view>  
            <!-- 标题 -->
            <view class='title'>项目成员</view>
          </block>

          <block wx:else>
            <!-- 列表项 -->
              <view class='item'>
                  <view class='item-one'>
                    <image class='item-icon' src='{{item.icon}}'></image>
                    <view class='item-text'>{{item.name}}</view>
                  </view>
                  <checkbox class='item-checkbox' value="{{item.id}}" checked='{{item.checked}}'
                  style='display:{{isLeader? "":"none"}}'/>
              </view>
          </block>
      </block>
    </checkbox-group>

    <!-- 添加新成员 -->
    <!-- <view class='item' bindtap='Addmember'>
        <view class='item-one'>
            <image class='item-icon' src='/img/add.png'></image>
            <view class='item-text addmemeber'>添加新成员</view>
        </view>
    </view> -->

    <button class='addMember' size='default' bindtap='Finish' style='display:{{isLeader? "":"none"}}'>完成</button>

    <!-- 新手指引 -->
    <view class="guide-container" style="display:{{is_beginner ? 'block':'none'}}">
      <view class="guide-mask">
        <view class="guide-focus" style="display:{{guide_step == 3 ? 'block':'none'}}">
          <image src='/img/add.png'></image>
        </view>
        <view class="guide-frame" style="display:{{guide_step == 3 ? 'flex':'none'}}">
          <text class="frame-title">{{frame_title_3}}</text>
          <text class="frame-desc">
            {{frame_desc_3}}
          </text>
          <text class="frame-desc">{{guide_step}}/3</text>
          <button class="frame-btn" size="default" type="primary" bindtap="GuideNext">立马尝试一下！</button>
        </view>
      </view>
    </view>

</view>
