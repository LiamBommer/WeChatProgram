/* pages/memberList/memberList.wxss */
.memberList-container{
    width:100%; 
    display: flex;
    flex-direction: column;
}

.memberList-container .title{
    color: #888888;
    margin-left: 40rpx;
    margin-top: 30rpx;
    margin-bottom: 16rpx;
}

.memberList-container .item{
    background: #fff;
    color: #000;
    width: 100%;
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.memberList-container .item .item-one{
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.memberList-container .item .item-one .item-icon{
    width: 48rpx;
    height: 48rpx;
    margin-left: 40rpx;
    border-radius: 20rpx;
}

.memberList-container .item .item-one .item-text{
    margin-left: 30rpx;
}

.memberList-container .item .item-one .item-text.addmemeber{
    margin-left: 30rpx;
    color: #888888;
}

.memberList-container .item .item-checkbox{
    margin-right: 20rpx;
}

.memberList-container .addMember{
  border-radius:16rpx;
  border: 0rpx;
  color: #fff;
  background: #09BB07;
}

/*** 新手指引 ***/
.guide-container {
  display: flex;
  position: fixed;
  z-index: 9999;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}
.guide-container .guide-mask {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.guide-container .guide-mask .guide-frame {
  width: 500rpx;
  min-height: 375rpx;
  border-radius: 20rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.guide-container .guide-mask .guide-frame .frame-title {
  font-size:  40rpx;
  margin: 120rpx 0rpx 10rpx 0rpx;
  width: 450rpx;
  text-align: center;
}
.guide-container .guide-mask .guide-frame .frame-desc {
  font-size: 34rpx;
  color: #888888;
  width: 450rpx;
  text-align: center;
  line-height: 60rpx;
}
.guide-container .guide-mask .guide-frame .frame-btn {
  width: 450rpx;
  margin-bottom: 20rpx;
  margin-top: 40rpx;
}
.guide-container .guide-mask .guide-focus {
  position: fixed;
  z-index: 10000;
  top: 246rpx;
  left: 0rpx;
  background-color: white;
  width: 120rpx;
  height: 80rpx;
}
.guide-container .guide-mask .guide-focus image {
  width: 40rpx;
  height: 40rpx;
  margin-top: 20rpx;
  margin-left: 40rpx;
}
/*** 新手指引 END ***/