<view>

  <view class='view-container'>
    <view  class='title-view ver-align'>
      <input class='title' placeholder='会议标题'/>
    </view>
    <view class='content-view'>
      <textarea class='content' placeholder='会议内容'/>
    </view>

    <view class="item-view ver-align">
      <image src='{{icon_deadline}}'></image>
      <text class='desc'>5月8日 截至</text>
    </view>
    <view class="item-view">
      <image src='{{icon_cycle}}'></image>
      <text class='desc'>重复</text>
    </view>
    <view class="item-view ver-align space-between">
      <view class="ver-align">
        <image src='{{icon_member}}'></image>
        <text class='desc'>成员</text>
      </view>
      <view class="ver-align">
        <image src='{{icon_member}}'></image>
        <image src='{{icon_member}}'></image>
        <image src='{{icon_member}}'></image>
        <image src='{{icon_create}}'></image>
      </view>
    </view>

  </view>

  <button type='primary' size='default'>完成</button>

</view>
