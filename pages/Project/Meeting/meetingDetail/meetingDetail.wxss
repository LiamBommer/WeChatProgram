
.view-container .title-view {
  border-bottom: 2rpx solid #f2f2f2;
  height: 120rpx;
  padding: 16rpx 0rpx;
}


.title-view .share{
  background-color: #fff;
  border: none;
  margin:0rpx;
  padding:0rpx
}

button[class="share"]::after {
  border: none;
} 

.title-view .share-hover{
  border: none;
}

button[hover-class="share-hover"]::after {
  border: none;
} 


.view-container .content-view {
  min-height:195rpx;
  padding-top:40rpx;
  word-wrap:break-word;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:5;
  -webkit-box-orient:vertical;
}

.view-container .content-view .content {
  font-size: 34rpx;
}

.view-container .title-view .title {
  font-size: 40rpx;
}

.desc.delete-text {
  color: #e64340;
}

.picker{
  margin-left: 10rpx;
}

image {
  height: 40rpx;
  width: 40rpx;
}

.member{
  border-radius: 50%;
  margin-left: 10rpx;
}