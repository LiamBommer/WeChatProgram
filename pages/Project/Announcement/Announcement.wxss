/* pages/Announcement/Announcement.wxss */
.Announcement-container{
  width: 100%;
  display: flex;
  flex-direction: column;
}


.Announcement-container .noitem{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top:260rpx;
}   

.Announcement-container .noitem .noitem-icon{
  width:130rpx;
  height:130rpx;
}

.Announcement-container .noitem  .noitem-title{
  font-size: 40rpx;
  color: #888888;
  margin-top:20rpx;
}

.Announcement-container .noitem  .noitem-content{
  font-size: 30rpx;
  color: #b2b2b2;
  margin-top:10rpx;
}

.Announcement-container .noitem  .noitem-create{
  color: #fff;
  background: #09BB07;
  margin-top: 40rpx;
}

.Announcement-container .item-container{
  padding:0rpx 40rpx;
  background: #fff;
}

.Announcement-container .item-container .item{
  width: 100%;
  min-height: 135rpx;
  background: #fff;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #f2f2f2;
}

.Announcement-container .item-container .item .item-first{
  width:600rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.Announcement-container .item-container .item .item-first .item-icon{
   width: 60rpx;
   height: 60rpx;
   border-radius: 200rpx;
}

.Announcement-container .item-container .item .item-first .item-text{
  width: 420rpx;
  height: 100%;
  margin: 16rpx 20rpx 16rpx 20rpx;
}

.Announcement-container .item-container .item .item-first .item-text .item-title{
   font-size: 34rpx;
}

.Announcement-container .item-container .item .item-first .item-text .item-content{
   font-size: 28rpx;
   color: #888888;
   /* 多行省略 */
   display: -webkit-box;
   line-height: 40rpx;
   word-break: break-all;
   -webkit-box-orient: vertical;
   -webkit-line-clamp: 2;
   overflow: hidden;
   text-overflow: ellipsis;
   /* 多行省略 */
}

.Announcement-container .item-container .item .item-second{
   color: #b2b2b2;
}

.Announcement-container .item-container .item .item-second .item-time{
   font-size: 25rpx;
   color: #b2b2b2;
}

.Announcement-container .item-container .item .item-second .item-read{
   font-size: 28rpx;
   color: #b2b2b2;
}

.Announcement-container .buildicon{
  position: fixed;
  left: 640rpx;
  top: 1000rpx;
  background-color: #09BB07;
  width: 80rpx;
  height: 80rpx;
}

.Announcement-container .buildicon image {
  width: 40rpx;
  height: 40rpx;
}

/*** 公告列表淡入 ***/
@keyframes announcementAnimation {
  0% {
    opacity: 0;
    height: 0rpx;
  }
  100% {
    opacity: 1;
    height: 135rpx; 
  }
}
/*** 公告列表淡入 END ***/

/*** 右下角的加号按钮 ***/
.z-depth-1, .btn, .btn-large, .btn-small, .btn-floating, {
  -webkit-box-shadow: 0 2px 2px 0 rgba(0, 0, 0, 0.14), 0 3px 1px -2px rgba(0, 0, 0, 0.12), 0 1px 5px 0 rgba(0, 0, 0, 0.2);
          box-shadow: 0 2px 2px 0 rgba(0, 0, 0, 0.14), 0 3px 1px -2px rgba(0, 0, 0, 0.12), 0 1px 5px 0 rgba(0, 0, 0, 0.2);
}

.z-depth-1-half, .btn:hover, .btn-large:hover, .btn-small:hover, .btn-floating:hover {
  -webkit-box-shadow: 0 3px 3px 0 rgba(0, 0, 0, 0.14), 0 1px 7px 0 rgba(0, 0, 0, 0.12), 0 3px 1px -1px rgba(0, 0, 0, 0.2);
          box-shadow: 0 3px 3px 0 rgba(0, 0, 0, 0.14), 0 1px 7px 0 rgba(0, 0, 0, 0.12), 0 3px 1px -1px rgba(0, 0, 0, 0.2);
}

.btn, .btn-large, .btn-small,
.btn-floating,
.btn-large,
.btn-small,
.btn-flat {
  font-size: 14px;
  outline: 0;
}

.btn i, .btn-large i, .btn-small i,
.btn-floating i,
.btn-large i,
.btn-small i,
.btn-flat i {
  font-size: 1.3rem;
  line-height: inherit;
}

.btn-floating {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  color: #fff;
  position: relative;
  overflow: hidden;
  z-index: 1;
  line-height: 80rpx;
  padding: 0;
  border-radius: 50%;
  -webkit-transition: background-color .6s;
  transition: background-color .6s;
  cursor: pointer;
  vertical-align: middle;
  box-shadow: 2rpx 8rpx 8rpx 2rpx #b2b2b2;
}

/* .btn-floating:hover {
  background-color: #76ea75;
} */

.btn-floating:before {
  border-radius: 0;
}

.btn-floating i {
  width: inherit;
  display: inline-block;
  text-align: center;
  color: #fff;
  font-size: 1.6rem;
  line-height: 40px;
}

button.btn-floating {
  border: none;
}
/*** 右下角的加号按钮 END ***/