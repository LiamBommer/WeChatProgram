.announcementDetail-view {
  display: flex;
  flex-direction: column;
}

.view-container .title-view {
  border-bottom: 2rpx solid #f2f2f2;
  height: 120rpx;
  padding: 16rpx 0rpx;
}

.title-view .title {
  font-size: 40rpx;
}

.view-container .content-view {
  min-height: 200rpx;
  padding: 16rpx 0rpx;
}

.view-container .note-view {
  padding-bottom: 16rpx;
  display: flex;
  flex-direction: column;
}

.note-view .note {
  color: #888888;
  font-size: 28rpx;
  text-align: right;
}

.desc.delete-text {
  color: #e64340;
}

image {
  height: 40rpx;
  width: 40rpx;
}

button {
  margin-bottom: 40rpx;
}

.item-title {
  margin: 30rpx 40rpx 16rpx 40rpx;
  color: #888888;
}
