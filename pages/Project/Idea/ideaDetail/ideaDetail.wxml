<!-- ideaDetail.wxml -->
<view class="idea-detail-container">

 <view class='view-container'>
    <view class='content-view' bindtap='Content'>
      <text  class='content' >{{content}}</text>
       <!-- <button class='share' hover-class="share-hover"  open-type="share">
          <image src='{{icon_share}}'></image>
       </button> -->
    </view>
    <view class="item-view ver-align">
      <view class='ver-align'>
        <image src='{{icon_project}}'></image>
        <text class='desc' >项目 | {{projectName}}</text>
      </view>
    </view>
    <view class="item-view ver-align space-between">
      <view class='ver-align'>
        <image src='{{icon_task_list}}'></image>
        <text class='desc' >关联任务</text>
      </view>
      <image src='{{icon_add}}'bindtap='connectTask'></image>
    </view>
    <block wx:if="{{taskId != -1}}">
      <view class="item-view ver-align space-between">
        <text >{{taskTitle}}</text>
        <image class='radius' src='{{taskUserPic}}'></image>
      </view>
    </block>
    <view class="item-view">
      <image src='{{icon_close}}'></image>
      <text class='desc delete-text 'bindtap='Delete'>删除点子</text>
    </view>
 </view>

 <block wx:if="{{isShared}}">
    <button type='primary' size='default' bindtap='showScheduleList'>去往项目</button>
  </block>

</view>
