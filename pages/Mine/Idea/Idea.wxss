/* pages/Mine/Idea/Idea.wxss */
.Mine-Idea-container{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.Mine-Idea-container .idea-item{
  width: 100%;
  height: 120rpx;
  background: #fff;
  display: flex;
  align-items: center;
}

.Mine-Idea-container .idea-item .item-first{
  width: 800rpx;
  display: flex;
  align-items: center;
}

.Mine-Idea-container .idea-item .item-first .item-text{
   margin-left: 40rpx;
}

.Mine-Idea-container .idea-item .item-first .item-text .item-icon{
   margin-left: 40rpx;
   width: 40rpx;
   height: 40rpx;
}

.Mine-Idea-container .idea-item .item-first .item-text .item-title{
   font-size: 30rpx;
}

.Mine-Idea-container .idea-item .item-second{
   font-size: 25rpx;
   margin-right: 10rpx;
   color: #b2b2b2;
}