<!--pages/Mine/Idea/Idea.wxml-->
<view class='Mine-Idea-container'>
  
  <block wx:for="{{Idea}}">
      <!-- 列表项 -->
      <view class='idea-item' bindtap='MeetingDetail' >
        <!-- 列表左 -->
        <view class='item-first'> 
          <view class='item-text'>
            <image class='item-icon' src='/img/idea.png'></image>
            <view class='item-title'>{{item.content}}</view>
          </view>
        </view>
        <!-- 列表右 -->
        <view class='item-second'>
          <view class='item-time'>{{item.time}}</view>
        </view>  
      </view>
  </block>

</view>
