/* pages/Mine/Mine.wxss */
@import "./Task/Task.wxss";
@import "./Meeting/Meeting.wxss";
@import "./Idea/Idea.wxss";  

.Mine-container{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.Mine-container .userinfo {
  display: flex;
  align-items: center;
  background: #fff;
  width: 100%;
  height: 140rpx;
}

.Mine-container .userinfo .userinfo-avatar {
  width: 120rpx;
  height: 120rpx;
  margin-left: 40rpx;
  border-radius:50%;
}

.Mine-container .userinfo .userinfo-nickname {
  color: #000;
  font-size: 34rpx;
  margin-left: 50rpx;
}

.Mine-container .item{
    font-size: 34rpx;
    background: #fff;
    color: #000;
    width: 100%;
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.Mine-container .item .item-one{
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.Mine-container .item .item-one .item-icon{
    width: 48rpx;
    height: 48rpx;
    margin-left: 40rpx;
}

.Mine-container .item .item-one .item-text{
    margin-left: 30rpx;
}

.Mine-container .nav{
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 34rpx;
  background: #fff;
  color: #888888;
}

.Mine-container .nav .nav-select{
  color: #09BB07;
}

.Mine-container .nav-more{
  width: 100%;
}