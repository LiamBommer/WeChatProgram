/* pages/Mine/Task/Task.wxss */
.Mine-Task-container{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.Mine-Task-container .task-item{
  width: 100%;
  height: 150rpx;
  background: #fff;
  display: flex;
  align-items: center;
}

.Mine-Task-container .task-item .item-first{
  width: 500rpx;
  display: flex;
  align-items: center;
}

.Mine-Task-container .task-item .item-first .item-checkbox{
   margin-left: 40rpx;
}

.Mine-Task-container .task-item .item-first .item-text{
   margin-left: 30rpx;
}

.Mine-Task-container .task-item .item-first .item-text .item-title{
   font-size: 34rpx;
}

.Mine-Task-container .task-item .item-first .item-text .item-content{
   font-size: 34rpx;
   color: #888888;
}

.Mine-Task-container .task-item .item-second{
   font-size: 26rpx;
   margin-right: 10rpx;
   color: #b2b2b2;
}